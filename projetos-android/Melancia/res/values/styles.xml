<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EdtValor">
        <item name="android:gravity">right|center</item>
        <item name="android:text">0,00</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="EdtValorLk">
        <item name="android:gravity">right|center</item>
        <item name="android:text">0,00</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EdtCodigo">
        <item name="android:gravity">center|center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="EdtCodigoLk">
        <item name="android:gravity">center|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:text">000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="EdtData">
        <item name="android:gravity">center|center</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">date</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:text">31/12/2014</item>
        <item name="android:width">120dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EdtDescricao">
        <item name="android:gravity">left|center</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="EdtTexto">
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
    </style>
    
    <style name="EdtTextoMinusculo">
        <item name="android:gravity">left|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TxvLabelMedium">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>

    <style name="TxvLabelSmall">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">14sp</item>
    </style>
    
</resources>